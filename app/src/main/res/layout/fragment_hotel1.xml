<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="380dp"
                android:layout_height="400dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                app:srcCompat="@drawable/thumbnail1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Four Seasons Resort"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2 Beds - 2 Bath"
                android:textColor="#A0A0A0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="100dp"
                android:text="Kendati dikelola oleh jaringan hotel berstandar internasional, Four Seasons resort Bali at Jimbaran Bay tetap menampilkan karakter Bali yang sangat kuat. Di lahan seluas 14 hektare ini, kamu akan mendapati resor yang didesain menyerupai desa tradisional Bali. Di sisi lain, salah satu hotel termewah di Indonesia ini juga menghadirkan pemandangan yang langsung menghadap ke sisi laut. Four Seasons Resort Bali at Jimbaran Bay mempunyai cukup banyak pilihan vila: Garden Villa, Jimbaran Bay Villa, Deluxe Villa, Premier Ocean Villa, family Premier Villa, Two-Bedroom Garden Villa, Two-Bedroom Jimbaran Bay Villa, Royal Villa, dan Imperial Three-Bedroom Villa. Ukuran tiap vila pun cukup luas, mulai dari 250m2 hingga 1.296 m2. Tak lupa, selain pengalaman menginap yang mewah, Four Seasons Resort Bali at Jimbaran Bay juga terkenal dengan restorannya, Sundara yang wajib dicicipi saat menginap di salah satu hotel paling mewah di Indonesia ini." />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/back"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:text=">"
        android:textColor="@color/white"
        android:backgroundTint="#6750A4"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="105dp"
        android:layout_marginBottom="24dp"
        android:text="Book Now"
        android:textColor="@color/white"
        android:backgroundTint="#6750A4"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>